<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="375dp"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="15dp"
            android:text="Super Savers"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="#999999"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="345dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:translationZ="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"

                app:srcCompat="@drawable/super_saver_banner" />
            <RelativeLayout
                android:id="@+id/InnerRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ExpiresText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expires in 07 Days"
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:paddingLeft="12dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/verticalLine"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:paddingBottom="4dp"
                    android:layout_alignParentBottom="true"
                    android:tint="@color/grey"
                    android:layout_toRightOf="@+id/ExpiresText"
                    android:src="@drawable/ic_line_vertical" />
                <TextView
                    android:id="@+id/BroughtText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 Brought"
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/verticalLine"/>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrderFood"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="10sp"
                app:backgroundTint="#1292DC"
                app:cornerRadius="10dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="#1292DC"
                app:strokeWidth="1dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginRight="12dp">

            </com.google.android.material.button.MaterialButton>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>